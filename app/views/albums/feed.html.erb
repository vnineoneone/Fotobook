<div class="col-9 main-content">
  <div
    class="btn-group"
    id="btn-main-content"
    role="group"
    aria-label="Basic radio toggle button group"
  >
    <%= button_to "PHOTO", "photos", :method => :get, class: "btn btn-primary", id: "btn-feed-photo" %>
    <%= button_to "ALBUM", "albums", :method => :get, class: "btn btn-primary", id: "btn-feed-album" %>
  </div>

  <div class="container row g-2 main-content-content">
    <% @albums.each do |album| %>
      <div class="col-lg-6 card-photo">
        <div class="image_gallery" data-bs-toggle="modal" data-bs-target=<%= "#photo#{album.id}" %>>
          <%= image_tag(album.pictures[0].url, class: "card-image1") %>
          <%= image_tag(album.pictures[0].url, class: "card-image2") %>
          <%= image_tag(album.pictures[0].url, class: "card-image3") %>
        </div>
        <div class="card-content">
          <div class="card-content-header">
            <div class="card-header-avatar"></div>
            <div class="card-header-name"><%= album.user.first_name %></div>
            <% if @type == 'discover' and current_user.id != album.user_id%>
              <% if current_user.followings.find_by(id: album.user_id)%>
                <div class="btn_follow">
                  <button>following</button>
                </div>
              <% else %>
                <%= button_to "follow" ,follow_user_path(album.user_id), form_class: "btn_unfollow" %>
              <% end %>
            <% end %>
          </div>
          <div class="card-title">
            <%= album.title %>
          </div>
          <div class="card-bottom">
            <%= album.description %>
          </div>
          <div class="card-heart">
            <i class="fa-solid fa-heart"></i>
            <div class="card-heart-number">
              <%= album.like_posts.size %>
            </div>
          </div>
          <div class="card-time">
            <%# <%= album.created_at %>
            %>
          </div>
        </div>
      </div>
      <div
      class="modal fade"
      id=<%= "photo#{album.id}" %>
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="staticBackdropLabel"
      aria-hidden="true"
      data-photo-target="modal"
    >
        <div class="modal-dialog modal-dialog-centered modal-lg modal_show">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel"><%= album.title %></h5>
              <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
            </div>
            <div class="modal-body" style="background-image: url('');width: 100%; height: 25em; overflow: hidden">
              <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <%= image_tag "avatar2" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag "avatar3" %>
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
            <div class="modal-footer">
              <div class="description"><%= album.description %></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%# <div class="spinner-border text-primary" role="status" style="margin: 10px;">
    <span class="visually-hidden">Loading...</span>
  </div> %>
</div>